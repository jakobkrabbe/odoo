#!/bin/bash

# Purpose: To copy a server and also copy all installed APT's
# $ list apt --installed > apt_list.txt

while IFS= read -r line; do
    echo "install..: $line"
    # Do the work...
    IFS='/' read -ra PIP3_INSTALL <<< "$line"

    # Install the dependency, the first name in line
    echo "installing... ${PIP3_INSTALL[0]}"
    sudo pip3 install -r ${PIP3_INSTALL[0]}

done < apt_list.txt

